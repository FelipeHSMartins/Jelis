                        <img src="/images/journal-text.svg" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0"><%= leitura.titulo %></h6>
                                <p class="mb-0 opacity-75"><%= leitura.nome %></p>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
          </div>


